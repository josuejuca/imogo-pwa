{
  "expo": {
    "name": "pwa",
    "slug": "pwa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "themeColor": "#ffffff", 
      "backgroundColor": "#ffffff", 
      "manifest": {
        "short_name": "PWA",
        "name": "Meu Progressive Web App",
        "start_url": "/",
        "display": "standalone", 
        "background_color": "#ffffff",
        "theme_color": "#000000",
        "description": "Uma descrição para o seu PWA",
        "icons": [
          {
            "src": "./assets/icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "./assets/icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      }
    }
  }
}
